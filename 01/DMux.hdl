/**
 * Demultiplexor:
 * {a, b} = {in, 0} if sel == 0
 *          {0, in} if sel == 1
 */

CHIP DMux {
    IN in, sel;
    OUT a, b;   
	
	PARTS:
	Or(a=in,b=sel,out=o1);   
	And(a=in,b=sel,out=b);
	Not(in=sel,out=nsel);
	And(a=o1,b=nsel,out=a);
}
